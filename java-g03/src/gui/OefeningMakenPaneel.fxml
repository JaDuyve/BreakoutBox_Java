<fx:root type="StackPane" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fx:id="img" fitHeight="1080.0" fitWidth="1920.0" pickOnBounds="true">
         <image>
            <Image url="@../images/mountains.jpg" />
         </image>
      </ImageView>
      <BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
         <right>
            <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="-Infinity" prefHeight="720.0" prefWidth="400.0" spacing="15.0" styleClass="sidepanels" stylesheets="@../css/app.css" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="lblTitel" alignment="CENTER" contentDisplay="CENTER" text="OEFENING MAKEN">
                     <font>
                        <Font name="Roboto Light" size="24.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblNaam" text="Naam">
                     <font>
                        <Font name="Roboto Regular" size="14.0" />
                     </font>
                  </Label>
                  <JFXTextField fx:id="txfNaam" promptText="Naam" />
                  <Label fx:id="lblAntwoord" text="Antwoord">
                     <font>
                        <Font name="Roboto Regular" size="14.0" />
                     </font>
                  </Label>
                  <JFXTextField fx:id="txtAntwoord" promptText="Antwoord" />
                  <HBox alignment="CENTER" spacing="50.0">
                     <children>
                        <JFXButton fx:id="btnOpgaveButton" onAction="#opgaveFileChooser" prefHeight="50.0" prefWidth="140.0" style="-fx-background-color: #00897B;" text="Kies opgave" textFill="WHITE">
                           <font>
                              <Font name="Roboto Regular" size="14.0" />
                           </font>
                        </JFXButton>
                        <JFXButton fx:id="btnFeedbackButton" onAction="#feedbackFileChooser" prefHeight="50.0" prefWidth="140.0" style="-fx-background-color: #00897B;" text="Kies Feedback" textFill="WHITE">
                           <font>
                              <Font name="Roboto Regular" size="14.0" />
                           </font>
                        </JFXButton>
                     </children>
                  </HBox>
                  <Label fx:id="lblGroepsbewerkingen" alignment="CENTER" prefHeight="18.0" prefWidth="150.0" text="Groepsbewerkingen" textAlignment="CENTER">
                     <font>
                        <Font name="Roboto Regular" size="14.0" />
                     </font>
                  </Label>
                  <AnchorPane fx:id="apGroepsbewerking" />
                  <Label fx:id="lblDoelstellingen" alignment="CENTER" layoutX="148.0" layoutY="576.0" prefHeight="18.0" prefWidth="125.0" text="Doelstellingen" textAlignment="CENTER">
                     <font>
                        <Font name="Roboto Regular" size="14.0" />
                     </font>
                  </Label>
                  <AnchorPane fx:id="apDoelstellingen" layoutX="30.0" layoutY="609.0" />
                  <Label fx:id="lblVak" text="Vak">
                     <font>
                        <Font name="Roboto Regular" size="14.0" />
                     </font>
                  </Label>
                  <JFXComboBox fx:id="vakDropDown" prefHeight="20.0" prefWidth="130.0" promptText="-- Kies Vak --">
                     <VBox.margin>
                        <Insets bottom="15.0" />
                     </VBox.margin>
                  </JFXComboBox>
                  <Label fx:id="lblTijdslimiet" text="Tijdslimiet">
                     <font>
                        <Font name="Roboto Regular" size="14.0" />
                     </font>
                  </Label>
                  <JFXTextField fx:id="txfTijdslimiet" maxWidth="50.0" minWidth="20.0" prefHeight="25.0" prefWidth="210.0" promptText="0" />
                  <HBox alignment="CENTER" spacing="50.0">
                     <children>
                        <JFXButton fx:id="btnVoegOefeningToe" alignment="CENTER" onAction="#VoegOefeningToe" prefHeight="50.0" prefWidth="140.0" style="-fx-background-color: FF8F00;" text="Voeg toe" textFill="WHITE">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                           <font>
                              <Font name="Roboto Regular" size="14.0" />
                           </font>
                        </JFXButton>
                        <JFXButton fx:id="btnCancel" alignment="CENTER" onAction="#cancel" prefHeight="50.0" prefWidth="140.0" style="-fx-background-color: #00897B;" text="Annuleren" textFill="WHITE">
                           <font>
                              <Font name="Roboto Regular" size="14.0" />
                           </font>
                        </JFXButton>
                     </children>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
